{
  "name": "div-files",
  "version": "1.0.0",
  "description": "Utilities to load and manipulate DIV files.",
  "main": "dist/div-files.js",
  "scripts": {
    "build": "concurrently \"npm run build:dev\" \"npm run build:prod\"",
    "build:dev": "webpack",
    "build:prod": "webpack --config webpack.prod.js",
    "clean": "shx rm -rf site",
    "copy": "shx cp -r index.html assets dist site/",
    "deploy": "npm run build && npm run copy && gh-pages -d site",
    "prelint": "echo Checking JS style...",
    "lint": "semistandard -v | snazzy",
    "lint:fix": "semistandard --fix | snazzy",
    "postdeploy": "npm run clean",
    "predeploy": "npm run clean && shx mkdir -p site",
    "start": "concurrently \"npm run signalserver\" \"npm run build\"",
    "dev": "webpack-dev-server",
    "signalserver": "signalhub listen -p 9000",
    "test": "karma start ./tests/karma.conf.js"
  },
  "pre-commit": [
    "lint"
  ],
  "semistandard": {
    "ignore": [
      "build/**",
      "dist/**",
      "node_modules/**"
    ],
    "env": [
      "mocha"
    ],
    "globals": [
      "assert",
      "sinon"
    ]
  },
  "keywords": [
    "div",
    "div2",
    "map",
    "fpg"
  ],
  "author": "Salvador de la Puente <salva@unoyunodiez.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.0.10",
    "@types/es6-promise": "0.0.33",
    "@types/mocha": "^2.2.45",
    "@types/sinon": "^4.1.2",
    "chai": "^4.1.2",
    "chai-shallow-deep-equal": "^1.4.6",
    "gh-pages": "^1.0.0",
    "inject-loader": "^3.0.1",
    "istanbul-instrumenter-loader": "^3.0.0",
    "karma": "^1.7.1",
    "karma-babel-preprocessor": "^7.0.0",
    "karma-chai-shallow-deep-equal": "0.0.4",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.4",
    "karma-sinon-chai": "^1.3.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.4",
    "mocha": "^3.5.3",
    "pre-commit": "^1.2.2",
    "semistandard": "^11.0.0",
    "shx": "^0.2.2",
    "sinon": "^4.0.0",
    "sinon-chai": "^2.14.0",
    "snazzy": "^7.0.0",
    "ts-loader": "^3.2.0",
    "typescript": "^2.6.2",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "webpack": "^2.6.1",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^2.4.5",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "concurrently": "^3.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/delapuente/aframe-chat.git"
  }
}
